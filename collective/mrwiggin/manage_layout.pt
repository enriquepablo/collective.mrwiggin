<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xml:lang="en" lang="en"
      metal:use-macro="context/main_layout/macros/master"
      i18n:domain="collective.mrwiggin">

<head>
    <div metal:fill-slot="javascript_head_slot" tal:omit-tag="">
        <link type="text/css" rel="kinetic-stylesheet"
            tal:attributes="href string:${context/absolute_url}/++resource++manage-portlets.kss"/>
    </div>
</head>

<body>

  <div metal:fill-slot="portal-layout">
    <tal:layout condition="view/is_layout">
      <div metal:use-macro="view/portal_layout" />
    </tal:layout>
    <tal:notlayout condition="not:view/is_layout">
     NOT MR. Wiggin Layout!
    </tal:notlayout>
  </div>

</body>
</html>
